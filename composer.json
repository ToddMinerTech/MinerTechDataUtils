{
    "name": "toddminertech/minertechdatautils",
    "type": "library",
    "description": "Misc data utilities for my projects",
    "keywords": [
        "ToddMinerTech",
        "MinerTechDataUtils"
    ],
    "homepage": "https://github.com/ToddMinerTech/MinerTechDataUtils",
    "license": "MIT",
    "authors": [
        {
            "name": "Todd Miner",
            "email": "todd@miner.technology",
            "homepage": "https://miner.technology",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.0",
        "ext-gd": "*",
        "phpoffice/phpspreadsheet": ">=1.21.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ToddMinerTech\\MinerTechDataUtils\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ToddMinerTech\\MinerTechDataUtils\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "test-coverage": "phpunit --coverage-html=coverage",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true
    }
}
